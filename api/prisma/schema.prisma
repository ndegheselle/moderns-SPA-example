generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  @@map("users")

  id            String @id @default(auto()) @map("_id") @db.ObjectId
  password      String
  username      String
  refreshToken  String?
}

model Account {
  @@map("accountany_accounts")

  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  balance       Float?
  
  transactions  Transaction[]
}

model Transaction {
  @@map("accountany_transactions")

  id            String @id @default(auto()) @map("_id") @db.ObjectId
  accountId     String @db.ObjectId
  
  date          DateTime
  orderNumber   Int
  description   String
  value         Float
  type          String?

  account       Account @relation(fields: [accountId], references: [id])
}